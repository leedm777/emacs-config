root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 8
trim_trailing_whitespace = true
# no default indent_size, because editorconfig isn't smart enough for lisp

[*.md]
indent_style = space
trim_trailing_whitespace = false
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8
